            "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
            "format-alt": "{:%Y-%m-%d}"
        }
    },
    {
        "layer": "top",
        "position": "bottom",
	{{- if eq .chezmoi.hostname "diegoLaptop" }}
	"output": "eDP-1",
	{{- else }}
        "output": "HDMI-A-1",
	{{- end }}
        "modules-left": [
            "hyprland/workspaces"
        ],
        "height": 25, // Waybar height (to be removed for auto height)
        "spacing": 4, // Gaps between modules (4px)
        "modules-right": [
            "network",
            "cpu",
            "memory",
            "temperature",
